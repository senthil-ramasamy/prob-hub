<div class="container">
  <p id="notice"><%= notice %></p>
  <section class="prob-page">
    
     
        
        <div class="jumbotron"> <center>
  <h1><%= @prob.pname %></h1>
  <ul class="post-meta">
          <li><i class="fa fa-pencil-square-o"></i><strong> Posted By:</strong> <%= @prob.person %></li>
          <li><i class="fa fa-clock-o"></i><strong> Posted On:</strong> <%= @prob.pdate %></li>
          <li><i class="glyphicon glyphicon-star"></i><strong> Ratings:</strong> <%= @prob.rateing %></li>
          <li><i class="glyphicon glyphicon-comment"></i><strong> Solutions: </strong><%= @prob.solns.count %></li>
        </ul>
        <div class="fb-share-button" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button_count"></div>
           </center>
  <p><p><%= raw(@prob.pstatement) %></p></p>
  <h4  align="right">Checkout Versions !</h4>
  
        
        <% @prob.vprobs.each do |comment| %>
          <blockquote class="blockquote-reverse">
          <p>
            <strong></strong>
            <%= comment.pversion.first(100) %>
          </p>
         
          <footer>
            <strong>Date:</strong>
            <%= comment.pvdate %>
             |  <%= link_to 'Show Versions', comment %>
          </footer>
         
        <% end %>
        <p align="right"><button class="btn btn-primary btn-md pro">Create Version</button><button class="btn btn-primary btn-md pro2">Hide</button></p>
        <div class="mast">
        <%= form_for([@prob, @prob.vprobs.build]) do |f| %>
          <p>
            <%= f.label :VersionName %><br>
            <%= f.text_field :pvname %>
          </p>
          <p>
            <%= f.label :Version %><br>
            <%= f.text_area :pversion, :class => 'ckeditor'  %>
          </p>
          <p>
            <%= f.submit %>
          </p>
        <% end %>
        </div>
  </div>
           
     
        

        
 <div class="modal-body">
      


        <p>
          <strong>Votes:</strong>
          <%= @prob.votes %>
        </p>



        <p>
          <strong>Points:</strong>
          <%= @prob.points %>
        </p>

        <p>
          <strong>Tag:</strong>
          <%= @prob.tag %>
        </p>

        <p>
          <strong>Probstatus:</strong>
          <%= @prob.probstatus %>
        </p>




        <div class="row">
          <div class="small-2 large-2 columns">
            <%= imdb_style_rating_for @prob, current_user%>
          </div>
          <br>
          <div class="small-2 large-4 columns">
            <% if current_user %>
              Visual Effects: <%= rating_for @prob, "Factor1" %>
              <br>
              Original Score: <%= rating_for @prob, "Factor2" %>
              <br>
              Director: <%= rating_for @prob, "Factor3" %>
              <br>
              Custome Design: <%= rating_for @prob, "Factor4" %>
            <% end %>
          </div>
        </div>

</div> 
