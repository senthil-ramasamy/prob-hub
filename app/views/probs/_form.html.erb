<%= simple_form_for(@prob) do |f| %>
  <%= f.error_notification %>
  <div class="container">
    <div class="form-inputs">
      <%= f.input :pname, label: "Project Title" , placeholder: "Enter appropriate title..." %><br/>
      <%= f.text_area :pstatement, :class => 'ckeditor' %>
      <%= f.input :person %>
      <%= f.input :tag %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary btn-md" %> 
      <%= link_to 'Back', probs_path, class: "btn btn-primary btn-md" %>
    </div>
  </div>
<% end %>
